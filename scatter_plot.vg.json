{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 400,
    "title": "Trend of COVID-19 Deaths Over Time",
    "data": {"url": "https://raw.githubusercontent.com/owid/covid-19-data/master/public/data/latest/owid-covid-latest.csv"},
    "transform": [
      {"filter": "datum.location != \"World\""},
      {"filter": "datum.location != \"Asia\""},
      {"filter": "datum.location != \"Europe\""},
      {"filter": "datum.location != \"North America\""},
      {"filter": "datum.location != \"South America\""},
      {"filter": "datum.location != \"European Union\""},
      {"filter": "datum.location != \"Africa\""}
    ],
    "mark": "circle",
    "encoding": {
      "x": {"field": "total_cases", "type": "quantitative", "axis": {"tickCount": 7}, "scale": {"type": "log"}},
      "y": {"field": "total_deaths", "type": "quantitative", "axis": {"tickCount": 6}, "scale": {"type": "log"}},
      "color": {"field": "continent", "type": "nominal"},
      "size": {"field": "population", "type": "quantitative"},
      "tooltip": [
        {"field": "location", "type": "nominal", "title": "Country"},
        {"field": "total_deaths", "type": "quantitative", "title": "Total Deaths"}
      ]
    }
  }
  