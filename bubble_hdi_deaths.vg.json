{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 400,
  "height": 400,
  "title": "Trend of COVID-19 Deaths Over Time",
  "data": {
    "url": "https://raw.githubusercontent.com/owid/covid-19-data/master/public/data/latest/owid-covid-latest.csv"
  },
  "params": [
    {
      "name": "Population_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 1000000000,
        "step": 1000000,
        "name": "Minimum Population: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.continent != \"\""},
    {"filter": "datum.human_development_index != \"\""},
    {"filter": "datum.population > Population_Above"}
  ],
  "encoding": {
    "x": {
      "field": "human_development_index",
      "type": "quantitative",
      "axis": {"tickCount": 6},
      "scale": {"type": "symlog"}
    },
    "y": {
      "field": "total_deaths_per_million",
      "type": "quantitative",
      "axis": {"tickCount": 6},
      "scale": {"type": "symlog"}
    }
  },
  "layer": [
    {
      "name": "top",
      "selection": {
        "continent_highlight": {
          "type": "multi",
          "fields": ["continent"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
            "range": [10, 50, 150, 200, 300, 400]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "continent",
          "type": "nominal",
          "scale": {"scheme": "tableau10"}
        },
        "opacity": {
          "condition": {"param": "continent_highlight", "value": 0.8},
          "value": 0.2
        },
        "tooltip": [
          {"field": "location", "type": "nominal", "title": "Country"},
          {"field": "human_development_index"},
          {
            "field": "total_deaths",
            "type": "quantitative",
            "title": "Total Deaths"
          }
        ]
      }
    },
    {
      "name": "bottom",
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "location", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum.location == 'China' || datum.location == 'Singapore' || datum.location == 'Australia' || datum.location == 'New Zealand' || datum.location == 'Italy' || datum.location == 'Yemen' ||datum.location == 'United States'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "location", "type": "nominal"},
          {"field": "total_cases", "type": "quantitative", "format": ","},
          {"field": "total_deaths", "type": "quantitative", "format": ","},
          {"field": "gdp_per_capita", "type": "quantitative", "format": ","},
          {
            "field": "total_cases_per_million",
            "type": "quantitative",
            "format": ".2f"
          }
        ]
      }
    }
  ]
}