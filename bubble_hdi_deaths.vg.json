{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 400,
  "height": 400,
  "title": "Trend of COVID-19 Deaths Over Time",
  "data": {
    "url": "https://raw.githubusercontent.com/owid/covid-19-data/master/public/data/latest/owid-covid-latest.csv"
  },
  "params": [
    {
      "name": "Population_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 5000000,
        "step": 10,
        "name": "Total Cases: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.continent != \"\""},
    {"filter": "datum.human_development_index != \"\""},
    {"filter": "datum.total_cases > Population_Above"},
    {"calculate": "toNumber(datum.total_deaths) / toNumber(datum.total_cases)", "as": "Mortality Rate"},
    {"calculate": "if(datum.total_deaths_per_million==0, 0, datum.total_deaths_per_million)", "as": "Total Deaths Per Million"},
    {"calculate": "datum.total_deaths_per_million + 1", "as": "Total Deaths Per Million "}
  ],
  "encoding": {
    "x": {
      "field": "human_development_index",
      "type": "quantitative",
      "title": "Human Development Index"
    },
    "y": {
      "field": "Total Deaths Per Million ",
      "type": "quantitative",
      "axis": {"tickCount": 4},
      "scale": {"type": "log"}
    }
  },
  "layer": [
    {
      "selection": {
        "continent_highlight": {
          "type": "multi",
          "fields": ["continent"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
            "range": [10, 50, 150, 200, 300, 400]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "continent",
          "type": "nominal",
          "scale": {"scheme": "tableau10"}
        },
        "opacity": {
          "condition": {"param": "continent_highlight", "value": 0.8},
          "value": 0.2
        },
        "tooltip": [
          {"field": "location", "type": "nominal", "title": "Country"},
          {"field": "population", "type": "quantitative","title": "Population"},
          {"field": "human_development_index", "title": "Human Development Index"},
          {"field": "total_cases", "type": "quantitative", "title": "Total Cases"},
          {"field": "Total Deaths Per Million"}

        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "location", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum.location == 'China' || datum.location == 'Malaysia' || datum.location == 'Australia' || datum.location == 'Peru' || datum.location == 'South Africa' || datum.location == 'Nigeria' ||datum.location == 'United States'",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ]
}