{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "COVID-19 Total Deaths by Country",
    "width": 800,
    "height": 400,
    "data": {
      "url": "https://raw.githubusercontent.com/nictce/FIT3179-Assignment-2/main/worldmap.topojson",
      "format": {
            "type": "topojson",
            "feature": "ne_110m_admin_0_countries"
          }
    },
    "transform": [{
        "lookup": "properties.ISO_A3",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/owid/covid-19-data/master/public/data/owid-covid-data.csv"
          },
          "key": "iso_code",
          "fields": ["total_deaths", "date"]
        }
      },
      {"calculate": "datum.total_deaths", "as": "Total Deaths"}
    ],
    "projection": {
      "type": "equirectangular"
    },
    "mark": {
      "type": "geoshape"
      },
    "encoding": {
      "color": {
        "field": "Total Deaths",
        "type": "quantitative",
        "scale": {"type": "symlog"}
      },
      "tooltip": [
        {"field": "properties.NAME", "type": "nominal", "title": "Country"},
        {"field": "total_deaths", "type": "quantitative", "title": "Total Deaths"},
        {"field": "date", "title": "Date Updated"}
      ]
    }
  
  }