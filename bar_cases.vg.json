{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Top Countries with Highest Cases Per Million",
    "width": 500,
    "height": 500,
    "data": {
      "url": "https://raw.githubusercontent.com/owid/covid-19-data/master/public/data/latest/owid-covid-latest.csv"
    },
    "transform": [
      {"calculate": "toNumber(datum.total_cases_per_million)", "as": "Total Cases Per Million"},
      {
        "window": [{"op": "rank", "as": "rank"}],
        "sort": [{"field": "Total Cases Per Million", "order": "descending"}]
      },
      {"filter": "datum.rank <= top_n_rank"},
      {"filter": "datum.continent != \"\""}
    ],
    "params": [
      {
        "name": "top_n_rank", "value": 15,
        "bind": {
          "input": "range", "min": 1, "max": 40, "step": 1,
          "name": "Countries displayed: "
        }
      }
    ],
    "layer": [
      {
        "params": [{"name": "brush", "select": {"type": "interval", "encodings": ["y"]}}],
        "mark": "bar",
        "encoding": {
          "x": {
            "field": "Total Cases Per Million",
            "type": "quantitative",
            "aggregate": "mean"
          },
          "y": {
            "field": "location",
            "title": "Country",
            "type": "nominal",
            "sort": {
              "field": "Total Cases Per Million",
              "op": "average",
              "order": "descending"
            }
          },
          "color": {
            "field": "continent",
            "scale": {
              "domain": [
                "North America",
                "South America",
                "Europe",
                "Africa",
                "Asia",
                "Oceania"
              ],
              "range": [
                "#76b7b2",
                "#f28e2b",
                "#4e79a7",
                "#9c755f",
                "#e15759",
                "#edc948"
              ]
            },
            "legend": {"title": "Continent"}
          },
          "opacity": {"condition": {"param": "brush", "value": 1}, "value": 0.5},
          "tooltip": [
            {"field": "location", "type": "nominal", "title": "Country"},
            {
              "field": "total_cases_per_million",
              "type": "quantitative",
              "title": "Total Cases Per Million"
            },
            {"field": "Total Cases Per Million", "type": "quantitative"},
            {"field": "rank"}
          ]
        }
      },
      {
        "transform": [{"filter": {"param": "brush"}}],
        "mark": "rule",
        "encoding": {
          "x": {
            "aggregate": "mean",
            "field": "Total Cases Per Million",
            "type": "quantitative"
          },
          "color": {"value": "firebrick"},
          "size": {"value": 2}
        }
      },
      {
        "transform": [
          {"filter": {"param": "brush"}},
          {
            "aggregate": [
              {
                "op": "mean",
                "field": "Total Cases Per Million",
                "as": "mean_deaths"
              }
            ],
            "groupby": ["brush"]
          },
          {"calculate": "'The selected countries have an average of '", "as": "text_annotation"}
        ],
        "mark": {"type": "text", "align": "right", "dx": 235, "dy": 215},
        "encoding": {"text": {"field": "text_annotation"}, "color": {"value": "white"}}
      },
      {
        "transform": [
          {"filter": {"param": "brush"}},
          {
            "aggregate": [
              {
                "op": "mean",
                "field": "Total Cases Per Million",
                "as": "mean_deaths"
              }
            ],
            "groupby": ["brush"]
          },
          {"calculate": "round(datum['mean_deaths']) + ' total cases per million population.'", "as": "text_annotation"}
        ],
        "mark": {"type": "text", "align": "right", "dx": 235, "dy": 230},
        "encoding": {"text": {"field": "text_annotation"}, "color": {"value": "white"}}
      }
    ],
    "config": {
      "background": "rgb(59, 59, 59)",
      "axis": {
        "labelColor": "white",
        "titleColor": "white",
        "gridColor": "dimgrey"
      },
      "legend": {"labelColor": "white", "titleColor": "white"},
      "title": {"color": "white"}
    }
  }